{% extends 'back.html.twig' %}
{% block title %}Contactez-nous{% endblock %}

{% block body %}       
         <table>
                   <thead>
                       <tr>
                           <th>Nom</th>
                           <th>Prenom</th>
                           <th>Email</th>
                           <th>Message</th>
                           <th>Action</th>
                       </tr>
                   </thead>
                   <tbody>
                       {% for contact in contacts %}
                       <tr>
                           <td>{{ contact.nom }}</td>
                           <td>{{ contact.prenom }}</td>
                            <td>{{ contact.email }}</td>
                           <td>{{ contact.message }}</td>
                           <td>    
                                   <a href="{{ path('contact_edit', {id: contact.id}) }}" class="btn btn-primary">Edit</a>
                                   <a href="{{ path('contact_delete', {id: contact.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this contact?')">Delete</a>
                            </td>
                       </tr>
                       {% endfor %}
                   </tbody>
               </table>
               
{% endblock %}
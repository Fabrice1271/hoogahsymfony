{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
 <div class="container mt-5 pt-5">
     <div class="row">
       <div class="col-sm-6 offset-sm-3">
         <h1 class="text-center">Contactez-nous</h1>

         <p>Un problème, une question? N’hésitez pas à utiliser ce formulaire pour prendre contact avec nous !</p>
      {% for message in app.flashes('message') %}
           <div class="alert alert-success">
               {{ message }}
           </div>
       {% endfor %}
      
       {{ form_start(form) }}
      <div class= "table">     
           <div class="input">
           {{ form_widget(form.nom, { attr: { placeholder: "Nom :"  } })   }}
           </div>
           <br>
          <div class="input">
            {{ form_widget(form.prenom, { attr: { placeholder: "Prenom :"  } })   }}
           </div> 
           <br>
           <div class="input">
           {{ form_widget(form.email, { attr: { placeholder: "Email :"  } }) }}
           </div>
           <br>
           <div class="input"> 
           {{ form_widget(form.message, { attr: { placeholder: "Message :"  } }) }}
           </div>
           <br>
           <button class="button">{{ button_label|default('Envoyer') }}</button>
      </div
       {{ form_end(form) }}
      </div>
     </div>
</div>
{% endblock %}
